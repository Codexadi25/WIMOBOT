<div class="panel-header">
    <h2>My Private Notes</h2>
    <button id="btn-create-pn-category" class="action-btn">New PN Category</button>
</div>

<div class="content-panel-grid">
    <nav class="category-nav">
        <button class="pn-category-nav-btn active" data-pn-category="all">All Categories</button>
        <% if (typeof pnCategories !== 'undefined') { %>
            <% pnCategories.forEach(category => { %>
                <div class="category-nav-item">
                    <button class="pn-category-nav-btn" data-pn-category-id="<%= category._id %>"><%= category.title %></button>
                    </div>
            <% }) %>
        <% } %>
    </nav>

    <div class="scroll-area">
        <div class="panel-header" style="padding: 1rem 0; display: flex; justify-content: space-between; align-items: center;">
            <% if (user.role === 'admin' || user.role === 'editor' || user.role === 'user') { %>
                <button id="btn-create-pn" class="action-btn-sm">Add New Note</button>
            <% } %>
            <button class="clear-filters-btn" id="clearFiltersPN">Clear Filters</button>
        </div>
       
        <div id="pns-list-container">
            <% privateNotes.forEach(note => { %>
                <div class="pn-item cand-item" data-pn-category-title="<%= note.category %>" data-note-id="<%= note._id %>" title="Click to copy content">
                    <div class="cand-header">
                        <span class="cand-category-label">CATEGORY: <%= note.category.toUpperCase() %></span>
                        <div class="cand-actions">
                            <button class="icon-btn btn-edit-pn" title="Edit Note">&#9998;</button>
                            <button class="icon-btn btn-delete-pn" title="Delete Note">&#128465;</button>
                        </div>
                    </div>
                    <h4 class="pn-title"><%= note.title %></h4>
                    <p class="pn-content cand-text"><%= note.content %></p>
                </div>
            <% }) %>
        </div>
    </div>
</div>